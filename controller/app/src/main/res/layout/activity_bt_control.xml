<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".BtControlActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="8dp">

            <com.makingrobot.smartcar.DirectionBoard
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="36dp"
                android:id="@+id/directionBoard"
                />

            <com.makingrobot.smartcar.SpeedBoard
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/speedBoard"
                />
        </LinearLayout>

        <Button
            android:id="@+id/selectBtBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right|top"
            android:text="选择蓝牙设备"/>

        <com.makingrobot.smartcar.JoystickView
            android:id="@+id/joystickView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom|center"
            android:alpha="0.8" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/chooseLayout"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_gravity="right"
        android:background="#ffffff" />

</android.support.v4.widget.DrawerLayout>